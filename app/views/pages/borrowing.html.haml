  %body
    .container
      %a.btn.btn-success.btn-lg{"data-target" => "#borrowModal", "data-toggle" => "modal", :type => "submit"}
        Use
/ Modal
#borrowModal.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
  .modal-content
    %font{:color => "black"}
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title Use Item #{params[:item]}
      .modal-body
        %form.form-horizontal{:action => "#"}
          %font{:color => "black"}
            .form-group
              %label.control-label.col-sm-2{:for => "id"} Select id:
              .col-sm-10
                %select{:name => "ids"}
                  - for i in 1..5 do
                    %option{:value => "id#{i}"} id #{i}
            .form-group
              %label.control-label.col-sm-2{:for => "duration"} Duration:
              .col-sm-10
                %input#duration.form-control{:type => "duration"}/
      .modal-footer
        %button.btn.btn-info{"data-dismiss" => "modal", :type => "submit"} Use
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
