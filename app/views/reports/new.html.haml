.container
  %h1 New report
  %br
  .row
    .col-sm-8.col-sm-offset-2
      = simple_form_for(@report) do |f|
        = f.error_notification

        .form-inputs.form-horizontal
          = f.input :audit_id, :input_html => {:value => params[:a_id]}, :as => :hidden
          .form-group
            .control-label.col-sm-4
              = f.label "Description: "
            .col-sm-8
              = f.input :description, :label => false
          .form-group
            .control-label.col-sm-4
              = f.label "Severity Rating: "
            .col-sm-8.text-left
              = f.select :urgency, ['3', '2', '1']

        .form-actions
          .form-group
            .col-sm-12
              = f.button :submit

  %br

  %a.btn{:href => "/accounts", :role => "button"} Back to Accounts

