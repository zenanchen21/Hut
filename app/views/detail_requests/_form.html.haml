= simple_form_for(@detail_request) do |f|
  = f.error_notification

  .form-inputs.form-horizontal
    .form-group
      .control-label.col-sm-4
        = f.label "Item: "
      .col-sm-8
        = f.input :detail_id, :label => false
    .form-group
      .col-sm-12
        = f.input :archived_new_value

  .form-actions
    .form-group
      .col-sm-12
        = f.button :submit
